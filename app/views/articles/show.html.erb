<h3 style="color:dimgray; font-size:1.5em; font-weight:bold"> Article Details </h3><br/>

<p> <div style="font-weight:bold;">Title: </div> <%= @article.title %> </p> 
<p> <div style="font-weight:bold;">Description: </div> <%= simple_format(@article.description) %>
</p>
<p> <div style="font-weight:bold;">Author:</div>  
    <% if @article.user %>
    <%= link_to gravatar_for(@article.user), user_path(@article.user) %>
    <% end %>
    
</br>
    <p style="font-weight:bold;">Categories:</p>
    <% if @article.categories.any? %>
    <% @article.categories.each do |a| %>
    <li class="btn btn-xs btn-lg", style="text-transform:capitalize; font-weight:bold;"> <%= link_to a.name, category_path(a) %> </li>
    <% end %>
    <% end %>

      <div style="padding-top: 15px;">
      <%= link_to 'Back to Articles Page', articles_path %> |
      <% if logged_in? && (current_user==@article.user || current_user.admin?) %>
      <%= link_to 'Edit Article', edit_article_path %> |
      </div>
      <% end %>
