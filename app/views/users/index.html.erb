<h3 style="color:dimgray; font-size:1.7em; font-weight:bold; text-align:center;">Registered Users</h3></br>

  <% @users.each do |a| %>
  
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div style="padding-bottom: 10px;">
      <%= link_to gravatar_for(a), user_path(a) %>
      </div>
      <div style="text-transform: capitalize; font-size: 1.3em; padding-bottom: 10px;">
      <%= link_to a.username, user_path(a) %>
      </div>
      <div class="indexdesc" style="color:dimgray;">
      <%= a.email %>
      </div>
        <div class="article-actions">
        <%= link_to 'Edit', edit_user_path(a), class: "btn btn-xs btn-success" %>
        <%= link_to 'Delete', user_path(a), method: :delete, class: "btn btn-xs btn-danger" %>
        </div>
      
    </div>
  </div>
  
  <% end %>