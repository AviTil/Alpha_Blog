<% @user.articles.each do |a| %>
  
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
  
    <%= link_to a.title, article_path(a) %> 
      <div class="indexdesc">
      <%= truncate(a.description, length: 100) %>
        <div class=article-meta-details>
        <small>Created By: <%= a.user.username if a.user %>,
                <%= time_ago_in_words(a.created_at) %> ago</small>
        </div>
      </div>
        <div class="article-actions">
        <%= link_to 'Edit', edit_article_path(a), class: "btn btn-xs btn-success" %>
        <%= link_to 'Delete', article_path(a), method: :delete, class: "btn btn-xs btn-danger" %>
        </div>
      
    </div>
  </div>
  
  <% end %>