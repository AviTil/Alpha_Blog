<h3 style="border-bottom: solid 1px grey; margin-bottom: 10px;"> All Categories </h3>

<% @categories.each do |a| %>
  
  <div class="row">
      <div style="font-size:3.2em; padding: 20px 0px 20px 10px; text-transform:capitalize;">
        <%= link_to a.name, category_path(a), class: "btn btn-lg" %>
      </div>
  </div>
<% end %>
        
    